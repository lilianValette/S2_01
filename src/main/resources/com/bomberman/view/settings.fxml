<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.bomberman.controller.SettingsController"
           styleClass="main-background"
           stylesheets="@style/account-style.css">

    <!-- Fond -->
    <ImageView fx:id="backgroundImage"
               fitHeight="600.0" fitWidth="800.0"
               pickOnBounds="true" preserveRatio="false" />

    <BorderPane>
        <!-- Header -->
        <top>
            <VBox alignment="CENTER" spacing="20.0" styleClass="header-section">
                <children>
                    <Text styleClass="page-title"
                          text="PARAMÈTRES"
                          textAlignment="CENTER"
                          fill="WHITE"/>
                </children>
                <padding>
                    <Insets bottom="20.0" top="30.0" />
                </padding>
            </VBox>
        </top>
        <!-- Centre : liste des paramètres -->
        <center>
            <VBox alignment="CENTER" spacing="30.0">
                <!-- Bloc pour chaque paramètre -->
                <VBox spacing="18.0" alignment="CENTER" styleClass="form-container" maxWidth="400">
                    <!-- Exemple : Accès éditeur de niveaux -->
                    <Button fx:id="levelEditorButton"
                            text="LEVEL EDITOR"
                            styleClass="game-button-primary"
                            maxWidth="300"
                            minWidth="220"/>
                    <!-- Ici on pourra rajouter d'autres paramètres dynamiquement -->
                </VBox>
            </VBox>
        </center>
        <!-- Bas : bouton retour -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" styleClass="footer-section">
                <children>
                    <Button fx:id="backButton" styleClass="game-button-secondary" text="RETOUR AU MENU" />
                </children>
                <padding>
                    <Insets bottom="30.0" top="20.0" />
                </padding>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>