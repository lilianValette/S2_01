<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.bomberman.controller.AccountControler"
           styleClass="main-background"
           stylesheets="@style/account-style.css">
    <!-- Image de fond -->
    <ImageView fx:id="backgroundImage"
               fitHeight="600.0" fitWidth="800.0"
               pickOnBounds="true" preserveRatio="false" />

    <!-- Interface principale -->
    <BorderPane>
        <!-- En-tête -->
        <top>
            <VBox alignment="CENTER" spacing="20.0" styleClass="header-section">
                <children>
                    <!-- TITRE PRINCIPAL BLANC -->
                    <Text styleClass="page-title"
                          text="GESTION DES COMPTES"
                          textAlignment="CENTER"
                          fill="WHITE"/>
                </children>
                <padding>
                    <Insets bottom="20.0" top="30.0" />
                </padding>
            </VBox>
        </top>

        <!-- Contenu central -->
        <center>
            <StackPane>
                <!-- Vue de connexion -->
                <StackPane fx:id="loginContainer" visible="true">
                    <VBox alignment="CENTER" spacing="30.0" styleClass="form-container">
                        <children>
                            <!-- SOUS-TITRE BLANC -->
                            <Text styleClass="section-title"
                                  text="CONNEXION"
                                  fill="WHITE"/>
                            <VBox alignment="CENTER" spacing="15.0" styleClass="form-fields">
                                <children>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Nom d'utilisateur :" />
                                            <TextField fx:id="loginUsername" promptText="Entrez votre nom d'utilisateur" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Mot de passe :" />
                                            <PasswordField fx:id="loginPassword" promptText="Entrez votre mot de passe" styleClass="game-password-field" />
                                        </children>
                                    </VBox>
                                    <Button fx:id="loginButton" styleClass="game-button-primary" text="SE CONNECTER" />
                                    <Label fx:id="loginMessage" styleClass="message-label" />
                                </children>
                            </VBox>
                            <!-- Bouton pour basculer vers création -->
                            <VBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Text fill="LIGHTGRAY" styleClass="field-label" text="Pas encore de compte ?" />
                                    <Button fx:id="showCreateButton" styleClass="game-button-secondary" text="CRÉER UN COMPTE" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                    </VBox>
                </StackPane>

                <!-- Vue de création de compte -->
                <StackPane fx:id="createContainer" visible="false">
                    <VBox alignment="CENTER" spacing="30.0" styleClass="form-container">
                        <children>
                            <!-- SOUS-TITRE BLANC -->
                            <Text styleClass="section-title"
                                  text="CRÉER UN COMPTE"
                                  fill="WHITE"/>
                            <VBox alignment="CENTER" spacing="15.0" styleClass="form-fields">
                                <children>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Nom d'utilisateur :" />
                                            <TextField fx:id="createUsername" promptText="Au moins 3 caractères" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Mot de passe :" />
                                            <PasswordField fx:id="createPassword" promptText="Au moins 4 caractères" styleClass="game-password-field" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Confirmer le mot de passe :" />
                                            <PasswordField fx:id="confirmPassword" promptText="Répétez votre mot de passe" styleClass="game-password-field" />
                                        </children>
                                    </VBox>
                                    <Button fx:id="createButton" disable="true" styleClass="game-button-primary" text="CRÉER LE COMPTE" />
                                    <Label fx:id="createMessage" styleClass="message-label" />
                                </children>
                            </VBox>
                            <!-- Bouton pour basculer vers connexion -->
                            <VBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Text fill="LIGHTGRAY" styleClass="field-label" text="Déjà un compte ?" />
                                    <Button fx:id="showLoginButton" styleClass="game-button-secondary" text="SE CONNECTER" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                    </VBox>
                </StackPane>

                <!-- Vue du profil -->
                <StackPane fx:id="profileContainer" visible="false">
                    <VBox alignment="CENTER" spacing="30.0" styleClass="form-container">
                        <children>
                            <Text styleClass="section-title"
                                  text="MON PROFIL"
                                  fill="WHITE"/>
                            <VBox alignment="CENTER" spacing="15.0" styleClass="profile-info">
                                <children>
                                    <HBox alignment="CENTER" spacing="20.0" styleClass="profile-row">
                                        <children>
                                            <Label styleClass="profile-label" text="Utilisateur :" />
                                            <Label fx:id="profileUsername" styleClass="profile-value" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="20.0" styleClass="profile-row">
                                        <children>
                                            <Label styleClass="profile-label" text="Parties jouées :" />
                                            <Label fx:id="profileGamesPlayed" styleClass="profile-value" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="20.0" styleClass="profile-row">
                                        <children>
                                            <Label styleClass="profile-label" text="Parties gagnées :" />
                                            <Label fx:id="profileGamesWon" styleClass="profile-value" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="20.0" styleClass="profile-row">
                                        <children>
                                            <Label styleClass="profile-label" text="Taux de victoire :" />
                                            <Label fx:id="profileWinRate" styleClass="profile-value" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="20.0" styleClass="profile-row">
                                        <children>
                                            <Label styleClass="profile-label" text="Score total :" />
                                            <Label fx:id="profileTotalScore" styleClass="profile-value" />
                                        </children>
                                    </HBox>
                                    <!-- Séparateur -->
                                    <Region styleClass="divider" />
                                    <Button fx:id="logoutButton" styleClass="game-button-danger" text="SE DÉCONNECTER" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                    </VBox>
                </StackPane>
            </StackPane>
        </center>

        <!-- Pied de page -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" styleClass="footer-section">
                <children>
                    <Button fx:id="backButton" styleClass="game-button-secondary" text="RETOUR AU MENU" />
                </children>
                <padding>
                    <Insets bottom="30.0" top="20.0" />
                </padding>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>