<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bomberman.controller.AccountControler">
    <!-- Image de fond -->
    <ImageView fx:id="backgroundImage" fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false" />

    <!-- Interface principale -->
    <BorderPane>
        <!-- En-tête -->
        <top>
            <VBox alignment="CENTER" spacing="20.0" styleClass="header-section">
                <children>
                    <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GESTION DES COMPTES" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="32.0" />
                        </font>
                    </Text>
                </children>
                <padding>
                    <Insets bottom="20.0" top="30.0" />
                </padding>
            </VBox>
        </top>

        <!-- Contenu central -->
        <center>
            <StackPane>
                <!-- Vue de connexion -->
                <StackPane fx:id="loginContainer" visible="true">
                    <VBox alignment="CENTER" spacing="30.0" styleClass="form-container">
                        <children>
                            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="CONNEXION">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Text>

                            <VBox alignment="CENTER" spacing="15.0" styleClass="form-fields">
                                <children>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Nom d'utilisateur :" textFill="WHITE" />
                                            <TextField fx:id="loginUsername" promptText="Entrez votre nom d'utilisateur" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Mot de passe :" textFill="WHITE" />
                                            <PasswordField fx:id="loginPassword" promptText="Entrez votre mot de passe" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <Button fx:id="loginButton" styleClass="game-button-primary" text="SE CONNECTER" />
                                    <Label fx:id="loginMessage" styleClass="message-label" />
                                </children>
                            </VBox>

                            <!-- Bouton pour basculer vers création -->
                            <VBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Text fill="LIGHTGRAY" text="Pas encore de compte ?" />
                                    <Button fx:id="showCreateButton" styleClass="game-button-secondary" text="CRÉER UN COMPTE" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                    </VBox>
                </StackPane>

                <!-- Vue de création de compte -->
                <StackPane fx:id="createContainer" visible="false">
                    <VBox alignment="CENTER" spacing="30.0" styleClass="form-container">
                        <children>
                            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="CRÉER UN COMPTE">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Text>

                            <VBox alignment="CENTER" spacing="15.0" styleClass="form-fields">
                                <children>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Nom d'utilisateur :" textFill="WHITE" />
                                            <TextField fx:id="createUsername" promptText="Au moins 3 caractères" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Mot de passe :" textFill="WHITE" />
                                            <PasswordField fx:id="createPassword" promptText="Au moins 4 caractères" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <children>
                                            <Label styleClass="field-label" text="Confirmer le mot de passe :" textFill="WHITE" />
                                            <PasswordField fx:id="confirmPassword" promptText="Répétez votre mot de passe" styleClass="game-textfield" />
                                        </children>
                                    </VBox>
                                    <Button fx:id="createButton" disable="true" styleClass="game-button-primary" text="CRÉER LE COMPTE" />
                                    <Label fx:id="createMessage" styleClass="message-label" />
                                </children>
                            </VBox>

                            <!-- Bouton pour basculer vers connexion -->
                            <VBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Text fill="LIGHTGRAY" text="Déjà un compte ?" />
                                    <Button fx:id="showLoginButton" styleClass="game-button-secondary" text="SE CONNECTER" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                    </VBox>
                </StackPane>

                <!-- Vue du profil -->
                <StackPane fx:id="profileContainer" visible="false">
                    <VBox alignment="CENTER" spacing="30.0" styleClass="form-container">
                        <children>
                            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="MON PROFIL">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Text>

                            <VBox alignment="CENTER" spacing="15.0" styleClass="profile-info">
                                <children>
                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Label styleClass="profile-label" text="Utilisateur :" textFill="WHITE" />
                                            <Label fx:id="profileUsername" styleClass="profile-value" textFill="YELLOW" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Label styleClass="profile-label" text="Parties jouées :" textFill="WHITE" />
                                            <Label fx:id="profileGamesPlayed" styleClass="profile-value" textFill="LIGHTBLUE" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Label styleClass="profile-label" text="Parties gagnées :" textFill="WHITE" />
                                            <Label fx:id="profileGamesWon" styleClass="profile-value" textFill="LIGHTGREEN" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Label styleClass="profile-label" text="Taux de victoire :" textFill="WHITE" />
                                            <Label fx:id="profileWinRate" styleClass="profile-value" textFill="ORANGE" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Label styleClass="profile-label" text="Score total :" textFill="WHITE" />
                                            <Label fx:id="profileTotalScore" styleClass="profile-value" textFill="GOLD" />
                                        </children>
                                    </HBox>
                                    <Button fx:id="logoutButton" styleClass="game-button-danger" text="SE DÉCONNECTER" />
                                </children>
                            </VBox>
                        </children>
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                    </VBox>
                </StackPane>
            </StackPane>
        </center>

        <!-- Pied de page -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" styleClass="footer-section">
                <children>
                    <Button fx:id="backButton" styleClass="game-button-secondary" text="RETOUR AU MENU" />
                </children>
                <padding>
                    <Insets bottom="30.0" top="20.0" />
                </padding>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>