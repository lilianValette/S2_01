<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.bomberman.controller.GameSetupController"
           style="-fx-background-color: transparent; -fx-padding: 0;"
           stylesheets="@style/game-setup-menu.css">

    <!-- Aperçu du niveau/thème -->
    <StackPane fx:id="themePreviewPane" maxWidth="256" maxHeight="192"/>

    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="16">
            <Label fx:id="playerTextLabel" text="SELECT PLAYER" styleClass="menu-label"/>
            <Label fx:id="playerLeftArrow" text="◀" styleClass="arrow"/>
            <Label fx:id="playerCountLabel" styleClass="value-label"/>
            <Label fx:id="playerRightArrow" text="▶" styleClass="arrow"/>
        </HBox>
        <HBox alignment="CENTER" spacing="16">
            <Label fx:id="iaTextLabel" text="SELECT IA" styleClass="menu-label"/>
            <Label fx:id="iaLeftArrow" text="◀" styleClass="arrow"/>
            <Label fx:id="iaCountLabel" styleClass="value-label"/>
            <Label fx:id="iaRightArrow" text="▶" styleClass="arrow"/>
        </HBox>
        <HBox alignment="CENTER" spacing="16">
            <Label fx:id="themeTextLabel" text="LEVEL" styleClass="menu-label"/>
            <Label fx:id="themeLeftArrow" text="◀" styleClass="arrow"/>
            <Label fx:id="themeLabel" styleClass="value-label"/>
            <Label fx:id="themeRightArrow" text="▶" styleClass="arrow"/>
        </HBox>
        <!-- Pour le merge, on garde le bouton PLAY (meilleure accessibilité et cohérence UX) -->
        <Button text="PLAY" fx:id="playButton" style="-fx-font-size: 18px;"/>
    </VBox>
</StackPane>