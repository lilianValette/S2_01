<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.bomberman.controller.LevelEditorController"
           styleClass="main-background"
           stylesheets="@style/editor-complete-style.css">

    <ImageView fx:id="backgroundImage"
               fitHeight="700.0" fitWidth="1060.0"
               pickOnBounds="true" preserveRatio="false" />

    <BorderPane>
        <top>
            <VBox alignment="CENTER" spacing="8.0" styleClass="header-section">
                <children>
                    <Text styleClass="page-title"
                          text="LEVEL EDITOR"
                          textAlignment="CENTER"
                          fill="WHITE"/>
                </children>
                <padding>
                    <Insets bottom="16.0" top="10.0" />
                </padding>
            </VBox>
        </top>

        <center>
            <HBox alignment="TOP_LEFT" spacing="12.0">
                <VBox alignment="TOP_CENTER" spacing="14.0">
                    <children>
                        <Label text="PALETTE" styleClass="section-title"/>
                        <ToggleButton fx:id="emptyButton" text="VIDE" styleClass="palette-toggle"
                                      prefWidth="200"/>
                        <ToggleButton fx:id="wallButton" text="MUR SOLIDE" styleClass="palette-toggle"
                                      prefWidth="200"/>
                        <ToggleButton fx:id="breakableButton" text="MUR CASSABLE" styleClass="palette-toggle"
                                      prefWidth="250"/>
                        <Separator prefWidth="180"/>
                        <Label text="Images des blocs :" styleClass="editor-label"/>
                        <VBox alignment="TOP_CENTER" spacing="9.0">
                            <children>
                                <VBox alignment="CENTER" spacing="2.0">
                                    <Label text="Sol" styleClass="editor-label"/>
                                    <ImageView fx:id="groundPreview" fitWidth="32" fitHeight="32"/>
                                    <Button fx:id="chooseGroundBtn" text="Choisir l'image"
                                            prefWidth="250"/>
                                </VBox>
                                <VBox alignment="CENTER" spacing="2.0">
                                    <Label text="Mur solide" styleClass="editor-label"/>
                                    <ImageView fx:id="indestructiblePreview" fitWidth="32" fitHeight="32"/>
                                    <Button fx:id="chooseIndestructibleBtn" text="Choisir l'image"
                                            prefWidth="250"/>
                                </VBox>
                                <VBox alignment="CENTER" spacing="2.0">
                                    <Label text="Mur cassable" styleClass="editor-label"/>
                                    <ImageView fx:id="destructiblePreview" fitWidth="32" fitHeight="32"/>
                                    <Button fx:id="chooseDestructibleBtn" text="Choisir l'image"
                                            prefWidth="250"/>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="17.0" top="8.0" right="15.0" bottom="4.0"/>
                    </padding>
                </VBox>
                <AnchorPane>
                    <VBox alignment="TOP_CENTER">
                        <padding>
                            <Insets top="35"/>
                        </padding>
                        <GridPane fx:id="gridPane"
                                  minWidth="480.0" minHeight="416.0"
                                  maxWidth="480.0" maxHeight="416.0"
                                  prefWidth="480.0" prefHeight="416.0"
                                  hgap="1.0" vgap="1.0"
                                  styleClass="editor-grid"/>
                    </VBox>
                </AnchorPane>
            </HBox>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="18.0" styleClass="footer-section">
                <children>
                    <Button fx:id="clearButton" styleClass="game-button-secondary" text="EFFACER" minWidth="140"/>
                    <Button fx:id="saveButton" styleClass="game-button-primary" text="SAUVEGARDER" minWidth="180"/>
                    <Button fx:id="loadButton" styleClass="game-button-primary" text="CHARGER" minWidth="140"/>
                    <Button fx:id="backButton" styleClass="game-button-secondary" text="RETOUR" minWidth="110"/>
                </children>
                <padding>
                    <Insets bottom="8.0" top="8.0" />
                </padding>
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>